@page
@model DJ_Promo.Pages.DeleteVenueModel
@{
    ViewData["Title"] = "Delete Venue";
}

<h1>Delete Venue</h1>

<h3>Are you sure you want to delete this venue?</h3>
<div>
    <h4>Venue</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.Venue.VenueID</dd>
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Venue.Name</dd>
        <dt class="col-sm-2">Address</dt>
        <dd class="col-sm-10">@Model.Venue.Address</dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Venue.VenueID" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-page="Venues" class="btn btn-secondary">Back to List</a>
    </form>
</div>
