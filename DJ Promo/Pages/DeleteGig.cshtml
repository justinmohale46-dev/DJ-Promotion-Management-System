@page
@model DJ_Promo.Pages.DeleteGigModel
@{
    ViewData["Title"] = "Delete Gig";
}

<h1>Delete Gig</h1>

<h3>Are you sure you want to delete this gig?</h3>
<div>
    <h4>Gig</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">DJ</dt>
        <dd class="col-sm-10">@Model.Gig.DJ.StageName</dd>
        <dt class="col-sm-2">Venue</dt>
        <dd class="col-sm-10">@Model.Gig.Venue.Name</dd>
        <dt class="col-sm-2">Date</dt>
        <dd class="col-sm-10">@Model.Gig.Date.ToString("MMM dd, yyyy")</dd>
        <dt class="col-sm-2">Time</dt>
        <dd class="col-sm-10">@Model.Gig.Time.ToString(@"hh\:mm")</dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Gig.GigID" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-page="Gigs" class="btn btn-secondary">Back to List</a>
    </form>
</div>