@page
@model DJ_Promo.Pages.DeleteDJModel
@{
    ViewData["Title"] = "Delete DJ";
}

<h1>Delete DJ</h1>

<h3>Are you sure you want to delete this DJ?</h3>
<div>
    <h4>DJ</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.DJ.DJID</dd>
        <dt class="col-sm-2">Stage Name</dt>
        <dd class="col-sm-10">@Model.DJ.StageName</dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="DJ.DJID" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-page="DJs" class="btn btn-secondary">Back to List</a>
    </form>
</div>